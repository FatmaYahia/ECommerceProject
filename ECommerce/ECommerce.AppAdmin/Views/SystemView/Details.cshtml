@model SystemView
@{
    Layout = null;
}
<div class="row">
    <div class="col">
        <form asp-action="CreateOrEdit" class="form-horizontal">
            <section class="card">
              
                <div class="card-body">
                    <input asp-for="Id" type="hidden" />
                   
                    <div class="form-group row">
                        <label asp-for="Name" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" />
                        </div>
                      </div>
                    <div class="form-group row">
                        <label asp-for="CreatedAt" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="CreatedAt" class="form-control" />
                        </div>
                        <label asp-for="CreatedAt" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="CreatedAt" class="form-control" />
                        </div>
                    </div>
                </div>
              
            </section>
        </form>
    </div>
</div>
