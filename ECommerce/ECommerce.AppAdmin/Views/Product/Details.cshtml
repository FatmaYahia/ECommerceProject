@model Product
@{
   
    Layout = null;
}
<div class="row">
    <div class="col">
        <form >
            <section class="card">
               
                <div class="card-body">
                    <div class="form-group row">
                        <a href="~/ProductImages/@Model.Cover" class="image-popup-no-margins">
                            <img src="~/ProductImages/@Model.Cover" width="75" class="img-thumbnail img-fluid" />
                        </a>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Name" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" disabled/>
                        </div>
                      </div>
                    <div class="form-group row">
                        <label asp-for="Price" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="Price" class="form-control" disabled />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                        <label asp-for="Offer" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="Offer" class="form-control" disabled />
                        </div>
                      
                    </div>
                    <div class="form-group row">
                        <label asp-for="CreatedAt" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="CreatedAt" class="form-control" disabled />
                        </div>
                        <label asp-for="LastModifiedAt" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="LastModifiedAt" class="form-control" disabled />
                        </div>
                        
                    </div>
                    <div class="form-group row">
                        <label asp-for="Summary" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Summary" class="form-control" disabled />
                        </div>
                       </div>

                    <div class="form-group row">
                        <label asp-for="Description" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Description" class="form-control" disabled></textarea>
                        </div>
                    </div>
                  
                </div>
              
            </section>
        </form>
    </div>
</div>