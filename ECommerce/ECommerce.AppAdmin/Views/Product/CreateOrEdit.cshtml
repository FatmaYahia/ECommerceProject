@model Product
@{
    ViewData["Title"] = "Create Or Edit Product";
    await Html.RenderPartialAsync("PartialView/_FormStylesPartial");

}
<div class="row">
    <div class="col">
        <form enctype="multipart/form-data" asp-action="CreateOrEdit" class="form-horizontal">
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>
                    <h2 class="card-title">@ViewData["Title"]</h2>
                </header>
                <div class="card-body">
                    <input asp-for="Id" type="hidden" />
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group row">
                        <label asp-for="Name" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Price" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="Price" class="form-control" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                        <label asp-for="Offer" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="Offer" class="form-control" />
                        </div>
                        <span asp-validation-for="Offer" class="text-danger"></span>

                    </div>
                    <div class="form-group row">
                        <label asp-for="Summary" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Summary" class="form-control" />
                        </div>
                        <span asp-validation-for="Summary" class="text-danger"></span>
                    </div>
               
                    <div class="form-group row">
                        <label asp-for="Description" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Description" class="form-control" ></textarea>
                        </div>
                    </div>
                    @if (Model.Id == 0)
                    {
                        await Html.RenderPartialAsync("PartialComponant/UploadImage",new ImageVM());
                    }
                </div>
                <div class="card-footer">
                    <button type="reset" class="btn btn-default">Reset</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-success">Back</a>
                </div>
            </section>
        </form>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("PartialView/_ValidationScriptPartial");
        await Html.RenderPartialAsync("PartialView/_FormScriptsPartial");
    }
 }


