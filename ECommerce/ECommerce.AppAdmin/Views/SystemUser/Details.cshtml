@model SystemUser
@{
    Layout = null;
    var systemViews = UOW.SystemViewRepository.GetAll();

}
<div class="row">
    <div class="col">
        <form class="form-horizontal">
            <section class="card">
                
                <div class="card-body">
                   <div class="form-group row">
                        <label asp-for="FullName" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <label asp-for="JobTitle" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="JobTitle" class="form-control" />
                            <span asp-validation-for="JobTitle" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                    </div>
                 
                    <div class="form-group row">
                        <label asp-for="IsActive" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="IsActive" class="form-control" />
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CreatedAt" class="control-label col-sm-2 pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="CreatedAt" class="form-control" />
                          </div>
                        <label asp-for="LastModifiedAt" class="control-label col-sm-2 pt-2"></label>

                        <div class="col-sm-4">
                            <input asp-for="LastModifiedAt" class="form-control" />
                           </div>
                    </div>
                </div>
               
            </section>
        </form>
    </div>
</div>