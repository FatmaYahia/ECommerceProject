@*eof slider*@
<!-- specialization list -->
<section id="content" class="ls section_padding_top_100 section_padding_bottom_75">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="isotope_container" class="isotope masonry-layout row">
                    @foreach (var item in Model)
                    {
                        <div class="card" style="width: 16rem;cursor: pointer;" id="ProductCard" onclick="Details(@item.Id)">
                            <img src="~/ProductImages/@item.Cover" class="card-img-top" alt="PrductImage" width="150" height="150">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Summary</p>
                                @if(item.Offer>0){
                                    <span class="card-text" style="text-decoration:line-through;"><strong class="bold">@item.Price</strong>EGP</span>
                                    <span class="card-text"><strong class="bold">
                                               @( @item.Price - (@item.Price / 100 * @item.Offer))</strong>EGP</span>

                            }else
                                {
                                    <span class="card-text"><strong class="bold">@item.Price</strong>EGP</span>

                                }
                                <p class="cart-text">
                                    @item.Summary
                                </p>
                            </div>
                           
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script>
        function Details(id) {
            console.log(id);
            window.location.href = '/Product/ProductDetails/' + id;

        }
    </script>
}
