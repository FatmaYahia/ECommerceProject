@{
    var Email = HttpContextAccessor.HttpContext.Session.GetString("Email");
    var Id = HttpContextAccessor.HttpContext.Session.GetString("Id");
}
<!DOCTYPE html>
<html class="no-js">
    <head>
    <title>@ViewData["Title"]|Cosmetics</title>
    <meta charset="utf-8" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    @RenderSection("Style",required:false)
    <link rel="stylesheet" href="~/css/main.css" id="color-switcher-link">
    <link rel="stylesheet" href="~/css/animations.css">
    <link rel="stylesheet" href="~/css/fonts.css">
    <link rel="stylesheet" href="~/layerslider/css/layerslider.css">
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="~/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    
    <script src="~/~/js/vendor/modernizr-2.6.2.min.js"></script>
   </head>
    <body>
        
        
    <section class="page_toplogo ls text-center ">

        <a asp-action="Index" asp-controller="Home" class="logo top_logo">
            <img src="~/images/logo.jpg" alt="" width="100" height="100"> Cosmetics
        </a>
       
        <!-- header toggler -->
        <span class="toggle_menu">
            <span></span>
        </span>
    </section>
    <header class="page_header header_gradient bordered_items">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <!-- main nav start -->
                    <nav class="mainmenu_wrapper">
                        <ul class="mainmenu nav sf-menu">
                            <li class="">
                                <a asp-action="Index" asp-controller="Home">Home</a>

                            </li>
                            <li >
                                <a asp-action="Index" asp-controller="Cart">Cart</a>

                            </li>
                           <li >
                                <a asp-action="Index" asp-controller="WishList">WishList</a>

                           </li>
                            <li>
                                <a asp-action="Login" asp-controller="User" class="Displaybtn">LogIn</a>

                            </li>
                          
                        </ul>
                    </nav>
                    <!-- eof main nav -->
                </div>
            </div>
        </div>
    </header>

     
       @RenderBody()

    <section class="page_copyright ls section_padding_50">
        <div class="container">
            <div class="row to_animate">
                <div class="col-sm-12 text-center">
                    <a asp-action="Index" asp-controller="Home" class="logo vertical_logo grey">
                        <img src="~/images/logo.png" alt="">
                        <br>Cosmetics
                    </a>
                </div>
                <div class="col-sm-12 text-center">
                    <p>
                        Copyright @DateTime.Now.Year. Cosmetics by
                        <a asp-action="Index" asp-controller="Home">Cosmetics</a>
                    </p>
                </div>
            </div>
        </div>
    </section>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
      <script src="~/lib/jquery/dist/jquery.js"></script>
      <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
      <script src="~/js/compressed.js"></script>
     <script src="~/js/main.js"></script>
    <script>
        $(".Displaybtn").click(function () {
            console.log('hi iam here!')
            event.preventDefault();
            var href = $(this).attr('href');
            console.log(href);
            $("#Display").load(href);
            $("#DisplayModal").modal("show");

        })
                                
    </script>
   
    @RenderSection("Scripts",required:false)
    <div class="modal fade bd-example-modal-lg" id="DisplayModal" tabindex="-1" role="dialog" aria-labelledby="DetailsTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">@ViewData["Title"]</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="Display">
                </div>
            </div>
        </div>
    </div>

        <div class="modal fade bd-example-modal-lg" id="RegisterModal" tabindex="-1" role="dialog" aria-labelledby="DetailsTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">@ViewData["Title"]</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="ShowModal">
                </div>
            </div>
        </div>
    </div>


      </body>
</html>
