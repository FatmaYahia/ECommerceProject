@{
    var Email = HttpContextAccessor.HttpContext.Session.GetString("Email");
    var Id = HttpContextAccessor.HttpContext.Session.GetString("Id");
}
<!DOCTYPE html>
<html class="no-js">
    <head>
    <title>@ViewData["Title"]|Cosmetics</title>
    <meta charset="utf-8" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    @RenderSection("Style",required:false)
    <link rel="stylesheet" href="~\css\bootstrap.css" />
    <link rel="stylesheet" href="~/css/main.css" id="color-switcher-link">
    <link rel="stylesheet" href="~/css/animations.css">
    <link rel="stylesheet" href="~/css/fonts.css">
    <link rel="stylesheet" href="~/layerslider/css/layerslider.css">
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="~/fontawesome/css/all.min.css" rel="stylesheet" />
    
    <script src="~/~/js/vendor/modernizr-2.6.2.min.js"></script>
   </head>
    <body>
        <div class="preloader">
            <div class="preloader_image"></div>
        </div>
        <div id="canvas">
            <div id="box_wrapper">
                <section class="page_topline gradient section_padding_0 table_section table_section_md">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6 text-center text-md-left">
                            </div>
                        @if (string.IsNullOrEmpty(Email))
                        {
                            <div class="col-md-6 text-center text-md-right">
                                <ul class="inline-dropdown">
                                    <li class="dropdown login-dropdown">
                                        <a id="login" asp-action="login" asp-controller="Home" style="padding: 0px;font-size: 14px">Login</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6 text-center text-md-right">
                                <ul class="inline-dropdown">
                                    <li class="dropdown login-dropdown">
                                        <a id="login" asp-action="Register" asp-controller="User" style="font-size:14px">Register</a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-6 text-center text-md-right">
                                <ul class="inline-dropdown">
                                    <li class="dropdown login-dropdown">
                                       
                                        <a id="login" asp-action="Profile" asp-controller="User" asp-route-Id="@Id" style="font-size:14px">
                                            My Profile
                                        </a>
                                       
                                    </li>
                                    <li class="dropdown login-dropdown">
                                        <a id="login" asp-action="Logout" asp-controller="Home" style="font-size:14px">Logout</a>
                                    </li>
                                </ul>
                            </div>
                        }

                    </div>
                    </div>
                </section>
            </div>
        </div>
    <section class="page_toplogo ls text-center ">

            <a asp-action="Index" asp-controller="Home" class="logo top_logo">
                <img src="~/images/logo.jpg" alt="" width="100" height="100"> Cosmetics
            </a>
       
        <!-- header toggler -->
        <span class="toggle_menu">
            <span></span>
        </span>
    </section>
    <header class="page_header header_gradient bordered_items">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <!-- main nav start -->
                    <nav class="mainmenu_wrapper">
                        <ul class="mainmenu nav sf-menu">
                            <li class="">
                                <a asp-action="Index" asp-controller="Home">Home</a>

                            </li>
                            <li >
                                <a asp-action="Index" asp-controller="Cart">Cart</a>

                            </li>
                           <li >
                                <a asp-action="Index" asp-controller="WishList">WishList</a>

                           </li>
                           
                        </ul>
                    </nav>
                    <!-- eof main nav -->
                </div>
            </div>
        </div>
    </header>

     
       @RenderBody()

    <section class="page_copyright ls section_padding_50">
        <div class="container">
            <div class="row to_animate">
                <div class="col-sm-12 text-center">
                    <a asp-action="Index" asp-controller="Home" class="logo vertical_logo grey">
                        <img src="~/images/logo.png" alt="">
                        <br>Cosmetics
                    </a>
                </div>
                <div class="col-sm-12 text-center">
                    <p>
                        Copyright @DateTime.Now.Year. Cosmetics by
                        <a asp-action="Index" asp-controller="Home">Cosmetics</a>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <script src="~/js/vendor/jquery.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/compressed.js"></script>
    <script src="~/js/main.js"></script>
    @RenderSection("Scripts",required:false)

    </body>
</html>
